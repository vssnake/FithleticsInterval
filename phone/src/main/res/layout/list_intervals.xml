<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/list_intervals_icon"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/launcher"
        android:layout_alignParentStart="false"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/list_intervals_description"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:ellipsize="marquee"

        android:text="Active : 20 s | Rest: 10 s \n hello \n new line"
        android:textSize="12sp"
        android:layout_below="@+id/list_intervals_name"
        android:layout_toRightOf="@+id/list_intervals_icon"
        android:layout_toEndOf="@+id/list_intervals_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="gravity"
        android:gravity="top|left"
        android:maxLines="4"
        android:singleLine="false"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical"
        android:text="Name of the Interval"
        android:textSize="18sp"
        android:id="@+id/list_intervals_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_intervals_icon"
        android:layout_toEndOf="@+id/list_intervals_icon"
        android:textStyle="bold"
        android:textIsSelectable="false"/>
</RelativeLayout>
