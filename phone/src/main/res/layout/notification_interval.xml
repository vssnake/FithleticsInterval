<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/intervalNotification"
    android:background="#ffd8460f">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X"
        android:id="@+id/notifIntervalClose_Button"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:clickable="true" />

    <ImageView android:id="@+id/notifIntervalImage_Image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/hiit"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tabata"
        android:id="@+id/notifIntervalName_TextView"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:typeface="monospace"
        android:layout_toStartOf="@+id/notifIntervalClose_Button"
        android:layout_alignEnd="@+id/linearLayout"
        android:gravity="left"
        android:layout_marginLeft="90dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/notifIntervalImage_Image"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/notifIntervalName_TextView"
        android:layout_alignEnd="@+id/notifIntervalClose_Button">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="37dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/notification_Round"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="2/8"
                    android:id="@+id/notifIntervalRound_TextView"
                    android:textColor="@color/white"
                    android:layout_marginLeft="0dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Running"
                    android:id="@+id/notifIntervalState_TextView"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:alpha="1" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:background="@color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/notification_Interval_time"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:alpha="0.6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/notification_Total_time"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:alpha="0.6" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20 Seconds"
                    android:id="@+id/notifIntervalTime_TextView"
                    android:textColor="@color/white"
                    android:textAlignment="gravity"
                    android:gravity="left" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12 min 04 sec"
                    android:id="@+id/notifIntervalTotalTime_TextView"
                    android:textColor="@color/white"
                    android:textAlignment="gravity"
                    android:gravity="left" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>