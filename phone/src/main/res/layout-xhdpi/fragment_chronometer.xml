<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".customFragments.ChronometerFragment"
                android:clickable="false"
                android:background="@color/startInterval">

    <!-- TODO: Update blank fragment layout -->

    <vssnake.intervaltraining.utils.TextViewPlus
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/chronometer_TextView"
        android:text="00:00"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:textSize="130dp"
        app:customFont="roboto_black.ttf"
        android:textColor="@color/numbers_interval_goo"
        android:layout_below="@+id/chronomterTextInterval_TextView"
        android:layout_marginTop="-30dp" />

    <vssnake.intervaltraining.utils.TextViewPlus
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/interval_timer"
        android:id="@+id/chronomterTextInterval_TextView"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:textSize="30dp"
        app:customFont="roboto_black.ttf"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <vssnake.intervaltraining.utils.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/total_remaining"
        app:customFont="roboto_black.ttf"
        android:id="@+id/chronometerTotalText_TextView"
        android:textColor="@color/black"
        android:layout_below="@+id/chronometer_TextView"

        android:layout_centerInParent="true"/>

    <vssnake.intervaltraining.utils.TextViewPlus
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/chronometerTotal_TextView"
        android:gravity="center"
        android:textSize="40dp"
        app:customFont="roboto_black.ttf"
        android:textColor="@color/white"
        android:layout_toStartOf="@+id/chronometerTotalText_TextView"
        android:text="00:00"
        android:layout_below="@+id/chronometerTotalText_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
