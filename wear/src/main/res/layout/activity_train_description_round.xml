<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="vssnake.intervaltraining.TrainDescription">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/train_descrip_icon"
        android:src="@drawable/a_track"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hiit Endurance Inter-Advanced"
        android:id="@+id/train_descrip_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/train_descrip_icon"
        android:layout_alignBottom="@+id/train_descrip_icon"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/train_descrip_icon"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/train_descrip_button_start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/train_descrip_description"
            android:layout_below="@+id/train_descrip_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/train_descrip_name"/>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_train"
        android:id="@+id/train_descrip_button_start"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/train_descrip_icon"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
